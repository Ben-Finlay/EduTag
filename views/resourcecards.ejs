<!-- Tag Cards -->

<!-- ROW De-marker (3 cards per row)-->
<div class="container">
<div class="row g-0 row-gap">
  <!-- Individual Card -->
  <% for (const resource of user.resources) { %>
  <div class="col-md-4 p-3">
    <div class="card bg-transparent">
      <img src="https://image.thum.io/get/auth/58035-115fdddb495b048304a3db114625280a/<%=resource.url%>" class="card-img-top resource-img" alt="..." >
      <div class="card-body">
        <h5 class="card-title"><%=resource.title%></h5>
        <footer>
          <hr>
          <span class="card-bottom">
            <p class="card-subtitle mb-2 card-tag"><%= resource.tag %></p>
            <a class="card-spl" href="/resources/<%= resource.id %>">Card Page</a>
            <a href="<%=resource.url%>" class="btn btn-primary btn-sm card-link">Link</a>
          </span>

        </footer>
      </div>
    </div>
  </div>
   <% }%>
  </div>
</div>

  <!-- End of Individual Card -->

  <!-- Second Row -->
