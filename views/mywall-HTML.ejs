<!DOCTYPE html>
<html lang="en">

<head>
  <title>EduTag!</title>
  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <!--CSS Stylesheets -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/spl.css" type="text/css" />
  <link rel="stylesheet" href="/styles/create.css" type="text/css" />
  <link rel="stylesheet" href="/styles/userpage.css" type="text/css" />
  <link rel="stylesheet" href="/styles/ratings.css" type="text/css" />
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto+Serif:opsz,wght@8..144,100;8..144,300;8..144,600&display=swap"
    rel="stylesheet">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- Bootstrap CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Font Awesome Library -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Clientside JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>

  <script src="https://cdn.auth0.com/js/auth0-spa-js/1.13/auth0-spa-js.production.js"></script>
</head>


<body>

  <%- include('partials/_navbar'); %>
  <%- include('partials/_login'); %>
  <%- include('partials/_register'); %>

    <main>
      <div id="background-img">
      <%- include('partials/_sidebar'); %>
        <!-- Main Page Division-->
        <div class="col-9" style="margin-left: 22%;">
<!-- Tag Cards -->

<!-- ROW De-marker (3 cards per row)-->
<div class="row g-0 row-gap">
  <!-- Individual Card -->
  <% let cardCount = -1; %>
  <% for(let card of user.resources) { %>
  <%   cardCount ++; %>
  <%   if (cardCount === 3) { %>
      <div class="row g-0 row-gap">
  <%  cardCount = 0;  %>
  <%      }       %>
     <div class="col">
      <div class="card bg-transparent" style="width: 22rem;">
        <img src="https://image.thum.io/get/auth/58035-115fdddb495b048304a3db114625280a/<%= card.url %>" class="card-img-top resource-img" alt="..." >
        <div class="card-body">
          <h5 class="card-title"><%= card.title %></h5>
          <!-- <p class="card-text"><%- card.description %></p> -->
          <a href="<%= card.url %>" class="btn btn-primary btn-sm card-link">Link</a>
          <footer>
            <div class="icons">
              <span>
                <i class="fa fa-heart red ml-3 hover-animation" data-hover-color="red"></i>
                <span>
                  <i class="fa-regular fa-star star1"></i>
                  <i class="fa-regular fa-star star2"></i>
                  <i class="fa-regular fa-star star3"></i>
                  <i class="fa-regular fa-star star4"></i>
                  <i class="fa-regular fa-star star5"></i>
                </span>
            </div>
            <p class="card-comments">Comments <span class="comment-count">6</span></p>
            <span class="card-avg-rating"><strong>4.5</strong></span>
            <span>Avg Rating</span>
            <hr>
            <span class="card-bottom">
              <p class="card-subtitle mb-2 text-muted card-tag"><%= card.tag %></p>
              <a class="card-spl" href="/resources/<%= card.id %>">Card Page</a>
            </span>
            </span>

          </footer>
        </div>
      </div>
    </div>
<%  } %>


  <!-- End of Individual Card -->
</div>
  <!-- Second Row -->
</div>
</div>
</main>


</body>

</html>
