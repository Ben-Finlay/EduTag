<body>

  <%- include('partials/_navbar'); %>
  <%- include('partials/_login'); %>
  <%- include('partials/_register'); %>

    <main>
      <div id="background-img">
      <%- include('partials/_sidebar'); %>
        <!-- Main Page Division-->
        <div class="col-9" style="margin-left: 22%;">

  <div class="create-card" style="width: 40rem; height: 50rem; margin-left:16%;">


  <section id="create-resource">

  <p><h2 class="rainbow">Create a New Resource!</h2></p>
  <form method="POST" action="/resources/new">

  <span id="title-span"><h4 class="rainbow">Title:</h4>
    <input name="title" class="create-form rainbow" placeholder="Wikipedia">
  </span>

  <hr class="rainbow">

  <span id="desc-span"><h5 class="rainbow">Let everyone know what your resource is about:</h5>
    <textarea name="description" class="create-form desc-text rainbow" style="min-width:500px"></textarea>
  </span>

  <hr class="rainbow">

  <span id="tag-span"><h5 class="rainbow">Let's add some tags:</h5>
    <div id="tag-forms">
    <div class="tag-title rainbow"><p>Tag:   </p><input name="tag" class="tag-form create-form" placeholder="Chemistry"></div>
    </div>
  </span>

  <hr class="rainbow">

  <span id="url-span"><h5 class="rainbow">Link to your resource:</h5>
    <input name="url" class="create-form rainbow" value="https://" style="min-width:500px;">
  </span>

  <hr class="rainbow">

  <div class="create-resource rainbow">
    <button type="submit" class="btn btn-secondary">Create!</button>
  </div>
</form>
</section>

</div>
</div>
