<!DOCTYPE html>
<html lang="en">

<head>
  <title>EduTag!</title>
  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <!--CSS Stylesheets -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/spl.css" type="text/css" />
  <link rel="stylesheet" href="/styles/create.css" type="text/css" />
  <link rel="stylesheet" href="/styles/userpage.css" type="text/css" />
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto+Serif:opsz,wght@8..144,100;8..144,300;8..144,600&display=swap"
    rel="stylesheet">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- Bootstrap CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Font Awesome Library -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Clientside JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>

  <script src="https://cdn.auth0.com/js/auth0-spa-js/1.13/auth0-spa-js.production.js"></script>
</head>


<body>

  <%- include('partials/_navbar'); %>
    <%- include('partials/_login'); %>
      <%- include('partials/_register'); %>

        <main>
          <div id="background-img">
            <%- include('partials/_sidebar'); %>
              <!-- Main Page Division-->
              <div class="col-9" style="margin-left: 22%;">

                <div class="user-card" style="width: 40rem; height: 50rem; margin-left:16%;">


                  <section id="create-resource">

                    <p>
                    <h2 class="rainbow">Nice to see you, <span class="user-name"><%= user.name %> </span></h2>
                    </p>
                    <span>
                      <p class="rainbow">Your user profile:</p>
                    </span>
                    <hr class="rainbow">
                    <span id="user-name">
                      <h5 class="rainbow">Username:</h5>
                      <output name="username" class="uname rainbow"><%= user.name %></output>
                    </span>
                    <hr class="rainbow">
                    <span id="desc-span">
                      <h5 class="rainbow">Do you want to change your email? </h5>
                      <h5 class="rainbow">You can do it here:</h5>
                      <span id="flex-email-update">
                        <form method="POST" action="/users/myprofile" class="new-email-form">
                        <input name="emailUpdate" class="tag-form userpage-form rainbow" placeholder="New Email">
                        <div class="update-email rainbow">
                          <button type="submit" class="btn btn-secondary">Update!</button>
                        </div>
                      </form>
                      </span>

                    </span>
                    <hr class="rainbow">

                    <span id="tag-span">
                      <h5 class="rainbow">Your Email:</h5>
                      <output name="useremail" class="useremail rainbow"><%= user.email %></output>

                    </span>
                    <hr class="rainbow">

                  </section>

                </div>

              </div>
          </div>
        </main>


</body>

</html>
